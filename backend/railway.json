{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "python manage.py runserver",
        "restartPolicyType": "NEVER",
        "restartPolicyMaxRetries": 10
    },
    "nix": {
        "packages": [
          "python3",
          "python3Packages.pip",
          "libpango"
        ]
    }
}