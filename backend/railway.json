{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "commands": [
            "sudo apt update",
            "sudo apt install -y weasyprint"
        ]
    },
    "deploy": {
        "startCommand": "python manage.py runserver",
        "restartPolicyType": "NEVER",
        "restartPolicyMaxRetries": 10
    } 
}