{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "aptPkgs": [
            "python3-pip",
            "python3-cffi",
            "python3-brotli",
            "libpango-1.0-0",
            "libpangoft2-1.0-0",
            "libglib2.0-0"
        ]
    },
    "deploy": {
        "startCommand": "python manage.py runserver",
        "restartPolicyType": "NEVER",
        "restartPolicyMaxRetries": 10
    } 
}
